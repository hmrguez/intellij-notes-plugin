<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>hmrguez.notesplugin</id>

    <!-- Public plugin name should be written in Title Case. -->
    <name>Notes</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/hmrguez">hmrguez</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager. -->
    <description><![CDATA[
        Simple Notes plugin: a dedicated sidebar tool window listing your notes with a + button to add new ones.
    ]]></description>

    <!-- Product and plugin compatibility requirements. -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.rider</depends>

    <!-- Extension points defined by the plugin. -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Notes" anchor="left" factoryClass="hmrguez.notesplugin.notes.NotesToolWindowFactory"/>
    </extensions>

    <actions>
        <action id="hmrguez.notesplugin.actions.CreateNote"
                class="hmrguez.notesplugin.notes.CreateNoteAction"
                text="Create Note"
                description="Create a new note">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>